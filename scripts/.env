# ===== CONFIGURAÇÃO DE AMBIENTE =====
# Valores: 'local' (desenvolvimento) ou 'production' (Render/GitHub)
NODE_ENV=local

# ===== PORTA E URLS =====
# Para desenvolvimento local
PORT=3000

# URLs para CORS
LOCAL_URL=http://localhost:3000
GITHUB_PAGES_URL=https://mindpool.alexandre.pro.br
RENDER_BACKEND_URL=https://mindpool-backend.onrender.com

# ===== LOGS =====
# Níveis: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# ===== SEGURANÇA - HASH DE SENHAS =====
# true = ativa bcryptjs para hash de senhas
# false = mantém senhas em plaintext (apenas para desenvolvimento)
ENABLE_PASSWORD_HASHING=true

# ===== SEGURANÇA - RATE LIMITING =====
# true = ativa proteção contra brute force
ENABLE_RATE_LIMITING=true
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW_MS=60000

# ===== SESSÕES =====
# Tempo de expiração em minutos (0 = nunca expira)
SESSION_TIMEOUT=1440

# Intervalo de limpeza de sessões expiradas em ms
SESSION_CLEANUP_INTERVAL=300000
